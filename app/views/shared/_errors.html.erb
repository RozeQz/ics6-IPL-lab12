<%= provide :errors do %>  
  <% if object.errors.full_messages.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% object.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
<% end %>