<% provide :page_title, 'Вход' %>

<div>
  <div><h1>Вход</h1></div>

  <%= form_with url: session_create_url, method: :post, local:true do |form| %>
    <div class="d-flex form-group-row pb-3 w-50">
      <%= form.label :username, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :username, placeholder: 'Username', class: 'form-control', required: true %>
      </div>
    </div>

    <div class="d-flex form-group-row pb-3 w-50">
      <%= form.label :password, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.password_field :password, placeholder: 'Password', class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group pb-3">
      <div class="">
        <%= form.submit 'Войти', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  <p class="text-dark text-center">
        Еще нет профиля?
        <%= link_to 'Зарегистрируйтесь', new_user_path %>
  </p>
</div>