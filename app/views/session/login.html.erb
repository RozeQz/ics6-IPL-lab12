<% provide :page_title, 'Вход' %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= full_title(yield(:page_title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
    .container{
      padding-top: 30px;
    }
    .input-label{
      padding-bottom: 16px;
      font-family: var(--bs-font-sans-serif);
      /* color: #0d6efd; */
    }
  </style>
  </head>
  
  <body class="container">
  <h1 class="text-center input-label">Вход</h1>

  <%= yield :flash %>

  <%= form_with url: session_create_url, class: 'col-4 d-flex flex-column justify-content-center m-auto', method: :post, local:true do |form| %>

    <div class="form-group pb-3 pt-10">
      <%= form.text_field :username, placeholder: 'Имя пользователя', class: 'form-control', required: true%>
    </div>

    <div class="form-group pb-3">
      <%= form.password_field :password, placeholder: 'Пароль', class: 'form-control', required: true%>
    </div>

    <div class="form-group pt-3 pb-3 text-center">
        <%= form.submit 'Войти', class: 'btn btn-primary' %>
    </div>
  <% end %>
  <p class="text-dark text-center pt-3">
        Еще нет профиля?
        <%= link_to 'Зарегистрируйтесь', new_user_path %>
  </p>

  </body>
</html>

